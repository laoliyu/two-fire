
/* pages/Take-out/Take-out.wxss */

.page {
    width: 100%;
    height: 100%;
    background-color: #ebe9f6;
}

/* <!-- 欢迎光临 --> */

.page-header {
    height: 250px;
    width: 100%;
    background-color: #ffffff;
}

.header-title {
    font-weight: bold;
    font-size: 30px;
    color: #c2bfc6;
    margin: 10px;
}

.header-picture {
    display: flex;
    width: 100%;
    height: 130px;
    margin: 10px;
    border-bottom: 1px solid #b0b0b0;
}

.picture-left {
    width: 85%;
    height: 130px;
    border-right: 1px solid #b0b0b0;
}

.picture-left image {
    display: flex;
    width: 100px;
    height: 100px;
    border-radius: 10px;
    margin-left: 10px;
}

.pic-title {
    font-size: 25px;
    color: #000;
    margin-left: 130px;
    margin-top: -100px;
}

.picture-price {
    font-size: 18px;
    color: #b0b0b0;
    position: absolute;
    margin-left: 130px;
    margin-top: 30px;
}

.pic-all {
    font-size: 20px;
    color: #b0b0b0;
    position: absolute;
    margin-left: 220px;
    margin-top: 30px;
}

.picture-right image {
    width: 20px;
    height: 20px;
    margin-top: 50px;
    margin-left: 5px;
}

.address {
    width: 80%;
    height: 50px;
}

 .address image{
     position: absolute;
     width: 25px;
     height: 25px;
     margin-left: -340px;
    margin-top: 150px;

 }

.address .dcr{
    position: absolute;
    margin-left: -300px;
    margin-top: 150px;
    font-size: 15px;
    color: #b0b0b0;
}

.address-iphone image {
    width: 30px;
    height: 30px;
    margin-top: 100px;
    margin-left: -30px;
}

/* 本店美食 */

.page-food {
    width: 100%;
    height: 850px;
    background-color: #ffffff;
}

.food-title {
    font-weight: bold;
    margin: 20px;
    color: #000;
    font-size: 30px;
    margin-top: 20px;
}

.picture1 image {
    width: 95%;
   margin:10px ;
    border-radius: 20px;
}

.pic {
    font-size: 20px;
    margin-left: 20px;
}

.pic-name {
    color: #b0b0b0;
}

.pic-left {
    width: 48%;
}

.float {
    float: left;
}

.pic-right {
    width: 48%;
    /* margin-left: 50%; */
}

.pic-left image {
    width: 90%;
    height: 150px;
    border-radius: 20px;
}

.pic-right image {
    width: 100%;
    height: 150px;
    border-radius: 20px;
}

.food-menu {
    margin: 10px;
    margin-top: 20px;
}

.menu {
    background-color: red;
    color: #fff;
}

/* 轮播图 */
.page-detail{
    width: 100%;
    height: 750px;
    margin-top: 20px;
    background-color: #fff;
}
.detail-title{
    font-weight: bold;
   
    margin: 10px;
    font-size: 25px;
}
@import "../../icon/iconfont.wxss";
.u-wrp-bnr {
    width: 95%;
    height: 400rpx;
    display: block;
    /* position: relative; */
    top: 120px;
    background: #f0f0f0;
    margin: 0 auto;
  
}

.u-img-slide {
    width: 100%;
    height: inherit;
}
.detail-decr{
    font-size: 13px;
    margin: 10px;
    border-bottom: 1px solid #b0b0b0;

}
.dao{
    width: 95%;
    height: 50px;
    margin: 10px;
    border-bottom: 1px solid #b0b0b0;
}
.decr{
    font-size: 20px;
    margin-left: 10px;
}
.decr-rt{
    font-weight: 10px;
    color: #b0b0b0;
    float: right;
}
.tap{
    margin: 10px;
}
/* 特色标签 */

.search-keyword {
    padding: 30rpx;
}

.search-keyword-title {
    padding-left: 20rpx;
    margin-top: 40rpx;
    margin-bottom: 20rpx;
    font-size: 30rpx;
    border-left: 10rpx solid #b0b0b0;
}

.search-keyword-item {
    display: inline-flex;
    padding: 10rpx;
    border: 1px solid #b0b0b0;
    border-radius: 15rpx;
    background-color: #fbfbfb;
    margin: 10rpx 10rpx;
    color: #b0b0b0;
}
