}
.grade {
  position: relative;
  margin-left: 162px;
  top: -12px;
  font-size: 16px;
  display: inline-block;
}
.gradeNum{
  color: red;
}
.footer{
  position: relative;
  display: flex;
  bottom: -12px;
  width: 100%;
}
.footer image {
  width: 20px;
  height: 20px;
  /* bottom: 10px; */
