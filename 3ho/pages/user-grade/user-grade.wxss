page{
  width: 100%;
  height: 100%;
  background-color: rgba(231, 182, 182, 0.267);
}
.editTel{
  position: absolute;
  width: 12px;
  height: 12px;
  top: 47px;
  left: 148px;
}
.main{
  height: 120px;
  margin: 10px;
  background-color: #fff;
  border-radius: 3px;
}
.header{
  display: inline-block;
  position: relative;
  width: 100%;
  height: 65px;
  border-bottom: 1px solid rgb(214, 205, 205);
}
