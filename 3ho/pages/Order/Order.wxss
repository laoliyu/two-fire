/* pages/Order2/Order2.wxss */
body{
  margin: 0 auto;
  text-align: center;
}
.header{
  display:inline-block;
  width: 100%;
  height: 60px;
  background-color: #222222;
}
.back{
  left:10px;
  top: 5px;
  background-color: #393939;
  font-size: 15px;
  text-align: left;
  display:inline-block;
  border-radius: 25px;
  color:#c4c4c4;
  font-weight: normal;
  position: relative;
  top: 10px;
}
.menu {
  display: flex;
  position: fixed;
  margin:0 100px;
  height: 50rpx;
  background-color: #222;
  width: 70%;
  top: 0;
  margin-top: 18px;
  align-items: center;
  justify-content: space-around;
  font-size: 15pt;
  color: #bdbdbd;
}
.line {
  width: 5rpx;
  height: 75%;
  background-color: #1b1b1b;
}
.content{
width: 100%;
height: 100%;
margin:20px;
} 
.content image{
  width: 100px;
  height: 100px;
  margin-left: 30%;
  margin-top: 40%;
}
.content .text{
  font-size: 20px;
  color: #b0b0b0;
  text-align: center;
}
